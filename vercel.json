{
    "version": 2,
    "builds": [
      {
        "src": "server/index.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["server/**/*"]
        }
      },
      {
        "src": "vite.config.ts",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/index.ts" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  